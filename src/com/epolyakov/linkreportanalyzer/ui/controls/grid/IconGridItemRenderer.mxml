<?xml version="1.0"?>
<s:GridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" verticalAlign="middle"/>
	</s:layout>
	<s:Image id="image"/>
	<fx:Script><![CDATA[
		import com.epolyakov.linkreportanalyzer.ui.icons.Icons;

		private static const icons:Array = [Icons.packageIcon, Icons.defineIcon, Icons.externalIcon];

		override public function set data(value:Object):void
		{
			super.data = value;
			if (value)
			{
				image.source = icons[value[column.dataField]];
			}
		}
		]]></fx:Script>
</s:GridItemRenderer>
